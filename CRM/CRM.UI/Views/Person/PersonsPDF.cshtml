@model IEnumerable<PersonResponse>
@{
    Layout = null;
}

<style>
    body {
        font-family: Arial, sans-serif;
        font-size: 12px;
        margin: 20px;
    }

    h1 {
        text-align: center;
        margin-bottom: 30px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

        .table th, .table td {
            border: 1px solid #444;
            padding: 8px;
            text-align: left;
        }

        .table thead {
            background-color: #f2f2f2;
        }

    .table-hover tbody tr:hover {
        background-color: #f9f9f9;
    }

    .table-active {
        font-weight: bold;
    }
</style>

<div class="container">
    <h1>Persons</h1>
    <table class="table table-hover">
        <thead>
            <tr class="table-active">
                <th>Person Name</th>
                <th>Email</th>
                <th>Date Of Birth</th>
                <th>Age</th>
                <th>Gender</th>
                <th>Address</th>
                <th>Country</th>
                <th>Receive News Letters</th>
            </tr>
        </thead>
        <tbody>
            @foreach (PersonResponse person in Model)
            {
                <tr>
                    <td>@person.PersonName</td>
                    <td>@person.Email</td>
                    <td>@person.DateOfBirth?.ToString("dd-MM-yyyy")</td>
                    <td>@person.Age</td>
                    <td>@person.Gender</td>
                    <td>@person.Address</td>
                    <td>@person.Country</td>
                    <td>@(person.ReceiveNewsLetters ? "Yes" : "No")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
