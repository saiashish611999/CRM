@model PersonResponse;
@{
    ViewBag.Title = "Delete Person";
}
<h1>Delete Person</h1>
<br/>
<form asp-controller="Person" asp-action="Delete" method="post">
    <fieldset>
        <input type="hidden" asp-for="PersonId" />
        <div>
            <label asp-for="PersonName" class="form-label mt-4">Name</label>
            <input type="text" class="form-control" asp-for="PersonName" placeholder="Enter your name">
            <span class="text-danger small fst-italic d-block mt-1" asp-validation-for="PersonName"></span>

        </div>
       
        <br />
        <button type="submit" class="btn btn-danger">Delete</button>
    </fieldset>
</form>
