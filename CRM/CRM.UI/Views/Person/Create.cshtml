@model PersonAddRequest;

@{
    ViewBag.Title = "Create Person";
}

<br />
<h1> Create Person</h1>

<form asp-controller="Person" asp-action="Create">
    <fieldset>

        <div>
            <label asp-for="PersonName" class="form-label mt-4">Name</label>
            <input type="text" class="form-control" asp-for="PersonName" placeholder="Enter your name">
            <span class="text-danger small fst-italic d-block mt-1" asp-validation-for="PersonName"></span>

        </div>
        <div>
            <label asp-for="Email" class="form-label mt-4">Email</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="something@somone.com">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>
        <div>
            <label asp-for="Address" class="form-label mt-4">Address</label>
            <textarea class="form-control" asp-for="Address" rows="3"></textarea>
        </div>
        <div>
            <label asp-for="CountryId" class="form-label mt-4">Country</label>
            <select class="form-select" asp-for="CountryId" asp-items="@ViewBag.Countries">
                <option>Please select</option>
            </select>
        </div>
        <div>
            <label asp-for="DateOfBirth" class="form-label mt-4">Date Of Birth</label>
            <input type="date" class="form-control" asp-for="DateOfBirth">
        </div>
        @{
            string[] genderValues = Enum.GetNames(typeof(GenderOptions));

        }
        <fieldset>
            <legend class="mt-4">Gender</legend>
            @foreach (var gender in genderValues)
            {

                <div class="form-check">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="@gender">
                    <label class="form-check-label" asp-for="Gender">
                        @gender
                    </label>
                </div>

            }
        </fieldset>
        <fieldset>
            <legend class="mt-4">Receive News Letters</legend>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="true" asp-for="ReceiveNewsLetters">

            </div>
        </fieldset>
        <br />
        <button type="submit" class="btn btn-primary">Create</button>
    </fieldset>
</form>

